<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sourceFiles.groupClasses.GroupActivity"
    android:theme="@style/AppTheme2"
    android:elevation="0dp"
    android:weightSum="1"
    android:layout_centerHorizontal="false"
    android:baselineAligned="false"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:layout_weight="0.94">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usernameLogo"
            android:background="@color/colorPrimary"
            android:text="Huh?"
            android:fontFamily="cursive"
            android:textSize="48sp"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textStyle="normal|bold" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            >

            <ImageButton
                android:layout_width="75dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/translation"
                android:id="@+id/changeLangButton"
                android:layout_weight="0.94"
                android:scaleType="fitCenter"
                android:background="@color/transparent" />

            <ImageButton
                android:layout_width="75dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/addgroup"
                android:id="@+id/addgroupButton"
                android:layout_weight="0.94"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent" />

            <ImageButton
                android:layout_height="50dp"
                app:srcCompat="@drawable/signout"
                android:id="@+id/signoutbutton"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_width="75dp" />
        </GridLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/groupList"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>
